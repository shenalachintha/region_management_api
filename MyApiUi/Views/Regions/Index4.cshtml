@model MyApiUi.Models.AddRegionViewModel

<h1 class="mt-3">Add Region</h1>

<form asp-action="Create" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RegionImageUrl" class="form-label">Region Image URL</label>
        <input asp-for="RegionImageUrl" class="form-control" />
        <span asp-validation-for="RegionImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Region</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}